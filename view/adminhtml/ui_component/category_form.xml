<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="design">
        <field name="table_view_category_enabled" sortOrder="300" formElement="checkbox" component="Magento_Ui/js/form/element/single-checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="label" xsi:type="string" translate="true">Use Table View Category Config</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
        </field>
        <field name="table_view_category_default" sortOrder="304" formElement="checkbox" component="Magento_Ui/js/form/element/single-checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="label" xsi:type="string" translate="true">Use Table View as Default View</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
        </field>
        <field name="table_view_category_group" sortOrder="307" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Crimson\AdvancedTableView\Model\Category\Attribute\Source\CustomerGroup</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Allow Customer Groups</item>
                </item>
            </argument>
        </field>
        <field name="table_view_category_columns" sortOrder="309" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Crimson\AdvancedTableView\Model\Category\Attribute\Source\ColumnsGroup</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Hide Table Columns</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
